<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add User"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:hint="input user name"
        app:endIconMode="clear_text"
        app:counterEnabled="true"
        app:boxStrokeWidthFocused="0dp"
        app:counterMaxLength="10"
        app:endIconTint="@color/white"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:startIconTint="@color/white"
        android:textColorHint="#BEFFFFFF"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edit_text"
            android:imeOptions="flagNoFullscreen"
            android:textColorHighlight="@color/white"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:hint="input user password"
        app:endIconMode="password_toggle"
        app:counterEnabled="true"
        app:boxStrokeWidthFocused="0dp"
        app:counterMaxLength="10"
        app:endIconTint="@color/white"
        app:startIconDrawable="@drawable/ic_baseline_key_24"
        app:startIconTint="@color/white"
        android:textColorHint="#BEFFFFFF"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:inputType="numberPassword"
            android:background="@drawable/bg_edit_text"
            android:imeOptions="flagNoFullscreen"
            android:textColorHighlight="@color/white"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saqlash"
        android:paddingVertical="12dp"
        android:layout_marginTop="12dp"
        android:textAllCaps="false"
        android:backgroundTint="#7FBD37"/>


    <TextView
        android:id="@+id/text_dastruchi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="bottom|center"
        android:text="Dasturchi: Shahzod Toshboyev"
        android:layout_weight="1"/>

</LinearLayout>